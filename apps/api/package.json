{
  "name": "@fitlife/api",
  "version": "1.0.0",
  "description": "FitLife Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/swagger": "^8.13.0",
    "@prisma/client": "^5.8.1",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.1",
    "zod": "^3.22.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "@anthropic-ai/sdk": "^0.14.0",
    "openai": "^4.24.1",
    "ioredis": "^5.3.2",
    "bullmq": "^5.1.9",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.0",
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7"
  }
}

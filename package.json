{
  "name": "fitlife-app",
  "version": "1.0.0",
  "description": "FitLife - AI-powered fitness and nutrition app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "bash setup.sh",
    "setup:docker": "bash setup.sh --docker",
    "stop": "bash stop.sh",
    "services:up": "docker compose up -d postgres redis",
    "services:down": "docker compose down postgres redis",
    "dev": "concurrently \"pnpm --filter @fitlife/api dev\" \"pnpm --filter @fitlife/web dev\"",
    "dev:api": "pnpm --filter @fitlife/api dev",
    "dev:web": "pnpm --filter @fitlife/web dev",
    "dev:docker": "docker compose --profile docker-apps up",
    "dev:docker:api": "docker compose --profile docker-apps up api",
    "dev:docker:web": "docker compose --profile docker-apps up web",
    "build": "pnpm --filter ./apps/* build",
    "test": "pnpm --filter ./apps/* test",
    "lint": "pnpm --filter ./apps/* lint",
    "type-check": "pnpm --filter ./apps/* type-check"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}

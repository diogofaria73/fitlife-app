{
  "name": "fitlife-app",
  "version": "1.0.0",
  "description": "FitLife - AI-powered fitness and nutrition app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter ./apps/* dev",
    "build": "pnpm --filter ./apps/* build",
    "test": "pnpm --filter ./apps/* test",
    "lint": "pnpm --filter ./apps/* lint",
    "type-check": "pnpm --filter ./apps/* type-check"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}

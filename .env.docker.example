# Docker Environment Variables (Production)
# Copy this to .env.docker and fill with production values

# PostgreSQL
POSTGRES_USER=fitlife_user
POSTGRES_PASSWORD=change-this-strong-password
POSTGRES_DB=fitlife_prod

# Redis
REDIS_PASSWORD=change-this-redis-password

# JWT
JWT_SECRET=change-this-to-a-very-strong-secret-key-at-least-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# AI Providers
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# Storage (AWS S3 or CloudFlare R2)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fitlife-uploads-prod

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
